<%= simple_form_for [shop, event] do |f| %>
  <div class="form-shop-event">
    <div class="form-step-1-event">
      <div class="step1-event">
        <div class="container-white" id="container-step1-event">
          <%= f.input :title, label: "Quel est le nom de votre offre?", placeholder: "Ex: Exposition, Destockage.." %>
          <%= f.input :description, label: "Description de votre offre:", placeholder: "Ex: Exposition de tel cr√©ateur, Destockage de tel produit... " %>
          <%= f.input :beg_date, as: :string, label: "Quand commence votre offre?", input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string,  label: "Quand finit-elle?", input_html: {class: "datepicker"} %>
          <p id='step1-event-button' class= 'all-screen-button text-center'>Continuer</p>
          <div class="container text-center">
            <%= link_to  "Retour", shop_path(shop), class: 'return-button' %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-step-2-event">
      <div class="step2-event">
        <div class="container-white" id="container-step2-event">
          <legend class="col-form-label pt-0">S'agit-il d'une promotion ou d'un √©v√®nement?
            <abbr title="required">*</abbr>
          </legend>
          <div class="category-choices category-choices-events">
            <input type="hidden" name="event[category]" value="">
            <div class="category-choice <%= "active" if event.category == "Promotion" %> event-category">
              <input class="checkbox-categ" type="checkbox" value="Promotion"
                name="event[category]" id="event_category_promotion"
                <%= "checked=checked" if event.category == "Promotion" %>
              >
              <label  for="event_category_promotion"> <i class="fas fa-percent"></i> Promotion </label>
            </div>
            <div class="category-choice <%= "active" if event.category == "Ev√®nement" %> event-category">
              <input class="checkbox-categ" type="checkbox" value="Ev√®nement"
                name="event[category]" id="event_category_ev√®nement"
                <%= "checked=checked" if event.category == "Ev√®nement" %>
              >
              <label for="event_category_ev√®nement"> <i class="far fa-calendar-alt"></i> Ev√®nement </label>
            </div>
          </div>
          <%= f.input :offer, label: "Pr√©cisez ici l'offre exacte √† mettre en avant:", placeholder: "ex: 2 ach√©t√©s 1 offert, 20%" %>
          <br>
          <%= f.input :active, wrapper: :custom_boolean_switch, label: "Souhaitez-vous la mettre en ligne ?" %>
          <p id='step2-event-button' class= 'all-screen-button text-center'>Continuer</p>
          <div class="container text-center">
            <p class= 'return-button' id= 'button-return-event-step2'>Retour</p>
          </div>
        </div>
      </div>
    </div>
    <div class="form-step-3-event">
      <div class="step3-event">
        <div class="container-white" id="container-step3-event">
          <%= f.input :photos, as: :file, input_html: { class: 'hidden', id: "photo-input", multiple: true }, label_html: { class: 'upload-photo'}, label: 'üì∑ Ajoutez une ou plusieurs image(s)' %>
          <%= f.submit "Valider", class: 'all-screen-button' %>
          <div class="container text-center">
            <p class= 'return-button' id= 'button-return-event-step3'>Retour</p>
          </div>
          <div id="photo-preview"></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
